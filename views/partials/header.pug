- var profileTabClass = 'nav-item active'
- var directionTabClass = 'nav-item'

if body_class === 'direction'
    - profileTabClass = 'nav-item'
    - directionTabClass = 'nav-item active'
else
    - profileTabClass = 'nav-item active'
    - directionTabClass = 'nav-item'

nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
    a.navbar-brand(href='/') SCG
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
            li(class="" + profileTabClass)
                a.nav-link(href='/')
                    | Profile
                    span.sr-only (current)
            li(class="" + directionTabClass)
                a.nav-link(href='/directions?active_tab=direction') Direction
